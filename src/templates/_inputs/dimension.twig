{% import '_includes/forms.twig' as forms %}

<div style="padding: 4px 0; display: flex; align-items: center">
    <div>
        {{ forms.textField({
            name: "#{propertyConfig.handle}[quantity]",
            placeholder: 'Quantity',
            type: 'number',
            class: 'text-border',
            value: value['quantity'] ?? ''
        }) }}
    </div>

    <div>
        {{ forms.textField({
            name: "#{propertyConfig.handle}[unit]",
            placeholder: 'Unit',
            class: 'text-border text-margin',
            value: value['unit'] ?? '',
            first: true
        }) }}
    </div>
</div>